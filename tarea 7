# Imports go at the top
from microbit import *
import random

vocales = ['A','E','I','O','U']
consonantes = ['H','L','O','X','Q','S','P'] 
total_palabras = 7

while True:
    if button_a.was_pressed():
        vocal_aleatoria = vocales [random.randint(0,len(vocales)-1)]
        display.show(vocal_aleatoria)
        total_palabras = total_palabras -1
        sleep(1000)
    elif button_b.was_pressed():
        consonantes_aleatoria = consonantes [random.randint(0,len(consonantes)-1)]
        display.show(consonantes_aleatoria)
        total_palabras = total_palabras -1
        sleep(1000)
    else:
        display.show("?")
    display.scroll("Fin")  
